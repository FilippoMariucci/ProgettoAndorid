                android:layout_marginEnd="140dp"
                android:layout_marginBottom="28dp"
                android:text="persone_mancanti"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/occas4" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button"
                android:layout_width="88dp"
                android:layout_height="48dp"
                android:background="@drawable/btn_background"
                android:backgroundTint="@color/orange"
                android:fontFamily="@font/poppins"
                android:text="See more"
                android:textAllCaps="false"
                android:textSize="10sp"
                app:layout_constraintBottom_toBottomOf="@+id/occas1"
                app:layout_constraintEnd_toEndOf="@+id/occas1"
                app:layout_constraintHorizontal_bias="0.807"
                app:layout_constraintStart_toEndOf="@+id/pers_manc_1"
                app:layout_constraintTop_toTopOf="@+id/occas1"
                app:layout_constraintVertical_bias="0.737" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button2"
                android:layout_width="88dp"
                android:layout_height="48dp"
                android:background="@drawable/btn_background"
                android:backgroundTint="@color/orange"
                android:fontFamily="@font/poppins"
                android:text="See more"
                android:textAllCaps="false"
                android:textSize="10sp"
                app:layout_constraintBottom_toBottomOf="@+id/occas2"
                app:layout_constraintEnd_toEndOf="@+id/occas2"
                app:layout_constraintHorizontal_bias="0.791"
                app:layout_constraintStart_toEndOf="@+id/pers_manc_2"
                app:layout_constraintTop_toTopOf="@+id/occas2"
                app:layout_constraintVertical_bias="0.745" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button3"
                android:layout_width="88dp"
                android:layout_height="48dp"
                android:background="@drawable/btn_background"
                android:backgroundTint="@color/orange"
                android:fontFamily="@font/poppins"
                android:text="See more"
                android:textAllCaps="false"
