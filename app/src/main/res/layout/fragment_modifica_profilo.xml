<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".modifica_profilo">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/modifica_profilo_sezione"
                android:layout_width="315dp"
                android:layout_height="49dp"
                android:layout_marginTop="84dp"
                android:fontFamily="@font/poppins"
                android:text="Modifica profilo"
                android:textColor="@color/orange"
                android:textSize="37sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.551"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/nome_modifica"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/poppins"
                android:text="Nome"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/modifica_profilo_sezione"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/modifica_profilo_sezione"
                app:layout_constraintTop_toBottomOf="@+id/modifica_profilo_sezione" />

            <EditText
                android:id="@+id/input_nome_modifica"
                android:layout_width="284dp"
                android:layout_height="48dp"
                android:layout_marginTop="32dp"
                android:background="@drawable/input_back"
                android:ems="10"
                android:fontFamily="@font/poppins"
                android:inputType="textPersonName"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="@+id/nome_modifica"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/nome_modifica"
                app:layout_constraintTop_toBottomOf="@+id/nome_modifica" />

            <TextView
                android:id="@+id/cognome_modifica"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:fontFamily="@font/poppins"
                android:text="Cognome"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/input_nome_modifica"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/input_nome_modifica"
                app:layout_constraintTop_toBottomOf="@+id/input_nome_modifica" />

            <EditText
                android:id="@+id/input_email_modifica"
                android:layout_width="284dp"
                android:layout_height="48dp"
                android:layout_marginTop="32dp"
                android:background="@drawable/input_back"
                android:ems="10"
                android:fontFamily="@font/poppins"
                android:inputType="textPersonName"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="@+id/email_modifica"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/email_modifica"
                app:layout_constraintTop_toBottomOf="@+id/email_modifica"
                tools:ignore="TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/email_modifica"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:fontFamily="@font/poppins"
                android:text="Email"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/cognome_input_modifica"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/cognome_input_modifica"
                app:layout_constraintTop_toBottomOf="@+id/cognome_input_modifica" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:fontFamily="@font/poppins"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/input_email_modifica"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/input_email_modifica"
                app:layout_constraintTop_toBottomOf="@+id/input_email_modifica" />

            <EditText
                android:id="@+id/cognome_input_modifica"
                android:layout_width="284dp"
                android:layout_height="48dp"
                android:layout_marginTop="28dp"
                android:background="@drawable/input_back"
                android:ems="10"
                android:fontFamily="@font/poppins"
                android:inputType="number"
                app:layout_constraintEnd_toEndOf="@+id/cognome_modifica"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/cognome_modifica"
                app:layout_constraintTop_toBottomOf="@+id/cognome_modifica" />

            <TextView
                android:id="@+id/password_modifica"
                android:layout_width="113dp"
                android:layout_height="27dp"
                android:layout_marginTop="44dp"
                android:layout_marginEnd="168dp"
                android:fontFamily="@font/poppins"
                android:text="Password"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/input_email_modifica"
                app:layout_constraintTop_toBottomOf="@+id/input_email_modifica" />

            <EditText
                android:id="@+id/input_password_modifica"
                android:layout_width="284dp"
                android:layout_height="48dp"
                android:layout_marginTop="32dp"
                android:background="@drawable/input_back"
                android:ems="10"
                android:fontFamily="@font/poppins"
                android:inputType="textPersonName"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="@+id/password_modifica"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/password_modifica"
                app:layout_constraintTop_toBottomOf="@+id/password_modifica" />

            <TextView
                android:id="@+id/textView20"
                android:layout_width="259dp"
                android:layout_height="58dp"
                android:layout_marginTop="28dp"
                android:clickable="true"
                android:fontFamily="@font/poppins"
                android:text="Clicca per aggiungere una foto"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/input_password_modifica"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/input_password_modifica"
                app:layout_constraintTop_toBottomOf="@+id/input_password_modifica" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button4"
                android:layout_width="150dp"
                android:layout_height="49dp"
                android:layout_marginTop="44dp"
                android:background="@drawable/btn_background"
                android:backgroundTint="@color/orange"
                android:fontFamily="@font/poppins"
                android:text="Aggiungi"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/textView20"
                app:layout_constraintHorizontal_bias="0.543"
                app:layout_constraintStart_toStartOf="@+id/textView20"
                app:layout_constraintTop_toBottomOf="@+id/textView20" />
        </androidx.constraintlayout.widget.ConstraintLayout>



    </ScrollView>

</FrameLayout>