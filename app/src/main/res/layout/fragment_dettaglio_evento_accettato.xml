<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".dettaglio_evento_accettato">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/titoloDettaglioAccettato"
                android:layout_width="285dp"
                android:layout_height="42dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/poppins_bold"
                android:hint="Titolo evento"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.441"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView7" />

            <TextView
                android:id="@+id/personeDettaglioAccettato"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:text="0"
                android:textColor="@color/orange"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.018"
                app:layout_constraintStart_toEndOf="@+id/generalTextView1"
                app:layout_constraintTop_toBottomOf="@+id/titoloDettaglioAccettato" />

            <TextView
                android:id="@+id/generalTextView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:fontFamily="@font/poppins"
                android:text="Persona mancanti:"
                android:textColor="@color/orange"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/titoloDettaglioAccettato" />

            <TextView
                android:id="@+id/generalTextView5"
                android:layout_width="152dp"
                android:layout_height="26dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/poppins"
                android:text="Indirizzo:"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/generalTextView4" />

            <TextView
                android:id="@+id/indirizzoDettaglioAccettato"
                android:layout_width="138dp"
                android:layout_height="27dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/poppins"
                android:text="Indirizzo:"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/generalTextView5"
                app:layout_constraintTop_toBottomOf="@+id/cittaDettaglioAccettato" />

            <TextView
                android:id="@+id/generalTextView4"
                android:layout_width="70dp"
                android:layout_height="29dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/poppins"
                android:text="Citta:"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/generalTextView3" />

            <TextView
                android:id="@+id/cittaDettaglioAccettato"
                android:layout_width="244dp"
                android:layout_height="26dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/poppins"
                android:text="Citta"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/generalTextView4"
                app:layout_constraintTop_toBottomOf="@+id/categoriaDettaglioAccettato" />

            <TextView
                android:id="@+id/generalTextView6"
                android:layout_width="161dp"
                android:layout_height="27dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/poppins"
                android:text="Data:"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/dataDettaglioAccettato"
                app:layout_constraintTop_toBottomOf="@+id/indirizzoDettaglioAccettato" />

            <TextView
                android:id="@+id/dataDettaglioAccettato"
                android:layout_width="77dp"
                android:layout_height="29dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/poppins"
                android:text="Data:"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/generalTextView5" />

            <TextView
                android:id="@+id/generalTextView2"
                android:layout_width="173dp"
                android:layout_height="34dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/poppins"
                android:text="Occasione creata da:"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.142"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/generalTextView1" />

            <TextView
                android:id="@+id/nomeUtenteDettaglioAccettato"
                android:layout_width="204dp"
                android:layout_height="33dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/poppins"
                android:text="nomeutente "
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/generalTextView2"
                app:layout_constraintTop_toBottomOf="@+id/prezzodettaglioAccettato" />


            <TextView
                android:id="@+id/generalTextView3"
                android:layout_width="145dp"
                android:layout_height="34dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/poppins"
                android:text="Categoria:"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/generalTextView2" />

            <TextView
                android:id="@+id/categoriaDettaglioAccettato"
                android:layout_width="147dp"
                android:layout_height="34dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/poppins"
                android:text="Categoria"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/generalTextView3"
                app:layout_constraintTop_toBottomOf="@+id/nomeUtenteDettaglioAccettato" />

            <TextView
                android:id="@+id/generalTextView7"
                android:layout_width="152dp"
                android:layout_height="33dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/poppins"
                android:text="Lingue Parlate:"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/dataDettaglioAccettato" />

            <TextView
                android:id="@+id/lingueDettaglioAccettato"
                android:layout_width="142dp"
                android:layout_height="34dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/poppins"
                android:text="English"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/generalTextView7"
                app:layout_constraintTop_toBottomOf="@+id/generalTextView6" />

            <TextView
                android:id="@+id/prezzodettaglioAccettato"
                android:layout_width="85dp"
                android:layout_height="24dp"
                android:layout_marginEnd="68dp"
                android:fontFamily="@font/poppins"
                android:gravity="right|center_vertical"
                android:text="30€"
                android:textColor="@color/black"
                android:textSize="21sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/titoloDettaglioAccettato" />

            <TextView
                android:id="@+id/descrizioneDettaglioAccettato"
                android:layout_width="338dp"
                android:layout_height="105dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/poppins"
                android:gravity="center_vertical"
                android:text="Descrizione evento"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/generalTextView7"
                tools:layout_editor_absoluteX="34dp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="235dp"
                android:layout_height="23dp"
                android:layout_marginTop="28dp"
                android:fontFamily="@font/poppins_bold"
                android:text="Hai accettato di partecipare a "
                android:textColor="@color/orange_bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.181"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</FrameLayout>