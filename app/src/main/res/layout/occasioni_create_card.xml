<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="10dp"
    app:cardPreventCornerOverlap="false">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <TextView
            android:id="@+id/titoloEventoCreato"
            android:layout_width="155dp"
            android:layout_height="30dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/poppins_bold"
            android:hint="Titolo"
            android:textColor="@color/orange"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"></TextView>

        <TextView
            android:id="@+id/dataEventoCreato"
            android:layout_width="72dp"
            android:layout_height="20dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/poppins"
            android:text="25/12/2022"
            android:textSize="14dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/titoloEventoCreato" />

        <TextView
            android:id="@+id/categoriaEventoCreato"
            android:layout_width="159dp"
            android:layout_height="30dp"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/poppins"
            android:hint="categoria"
            android:textSize="18dp"
            app:layout_constraintStart_toStartOf="@+id/dataEventoCreato"
            app:layout_constraintTop_toBottomOf="@+id/dataEventoCreato"></TextView>

        <ImageButton
            android:id="@+id/deleteOccasione"
            android:layout_width="43dp"
            android:background="@drawable/corner_radius"
            android:src="@drawable/ic_baseline_delete_forever_24"
            android:layout_height="43dp"
            android:layout_marginStart="64dp"
            android:layout_marginBottom="24dp"
            android:textSize="9dp"
            app:layout_constraintBottom_toTopOf="@+id/categoriaEventoCreato"
            app:layout_constraintStart_toEndOf="@+id/titoloEventoCreato" />

        <ImageButton
            android:id="@+id/modficaOccasione"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/corner_radius"
            android:src="@drawable/ic_baseline_edit_24"
            android:text="MODIFICA"
            android:textSize="9dp"
            app:layout_constraintStart_toEndOf="@+id/deleteOccasione"
            tools:layout_editor_absoluteY="22dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>