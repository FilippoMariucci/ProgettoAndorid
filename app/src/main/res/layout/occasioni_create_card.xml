<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="10dp"
    app:cardCornerRadius="2dp"
    app:cardPreventCornerOverlap="false"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/fotoEventoUtente"
            android:layout_width="156dp"
            android:layout_height="145dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/titoloEventoCreato"
            android:layout_width="115dp"
            android:layout_height="32dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="16dp"
            android:text="PPPPPPP"
            app:layout_constraintStart_toEndOf="@+id/fotoEventoUtente"
            app:layout_constraintTop_toTopOf="parent"></TextView>

        <TextView
            android:id="@+id/dataEventoCreato"
            android:layout_width="72dp"
            android:layout_height="20dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:text="25/12/2022"
            android:textSize="8dp"
            app:layout_constraintStart_toEndOf="@+id/fotoEventoUtente"
            app:layout_constraintTop_toBottomOf="@+id/titoloEventoCreato" />

        <TextView
            android:id="@+id/categoriaEventoCreato"
            android:layout_width="154dp"
            android:layout_height="27dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toEndOf="@+id/fotoEventoUtente"
            app:layout_constraintTop_toBottomOf="@+id/dataEventoCreato"></TextView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>