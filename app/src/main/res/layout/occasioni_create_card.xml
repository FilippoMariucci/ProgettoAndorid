<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="10dp"
    app:cardPreventCornerOverlap="false">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/fotoEventoUtente"
            android:layout_width="158dp"
            android:layout_height="155dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/titoloEventoCreato"
            android:layout_width="184dp"
            android:layout_height="29dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/poppins_bold"
            android:hint="Titolo"
            android:textColor="@color/orange"
            android:textSize="20dp"
            app:layout_constraintStart_toEndOf="@+id/fotoEventoUtente"
            app:layout_constraintTop_toTopOf="parent"></TextView>

        <TextView
            android:id="@+id/dataEventoCreato"
            android:layout_width="72dp"
            android:layout_height="20dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/poppins"
            android:text="25/12/2022"
            android:textSize="14dp"
            app:layout_constraintStart_toEndOf="@+id/fotoEventoUtente"
            app:layout_constraintTop_toBottomOf="@+id/titoloEventoCreato" />

        <TextView
            android:id="@+id/categoriaEventoCreato"
            android:layout_width="184dp"
            android:layout_height="25dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/poppins"
            android:hint="categoria"
            android:textSize="18dp"
            app:layout_constraintStart_toEndOf="@+id/fotoEventoUtente"
            app:layout_constraintTop_toBottomOf="@+id/dataEventoCreato"></TextView>

        <Button
            android:id="@+id/deleteOccasione"
            android:layout_width="85dp"
            android:layout_height="30dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="4dp"
            android:text="DELETE"
            android:textSize="9dp"
            app:layout_constraintStart_toEndOf="@+id/fotoEventoUtente"
            app:layout_constraintTop_toBottomOf="@+id/categoriaEventoCreato" />

        <Button
            android:id="@+id/modficaOccasione"
            android:layout_width="85dp"
            android:layout_height="30dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            android:text="MODIFICA"
            android:textSize="9dp"
            app:layout_constraintStart_toEndOf="@+id/deleteOccasione"
            app:layout_constraintTop_toBottomOf="@+id/categoriaEventoCreato" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>